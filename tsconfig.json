{
  "compilerOptions": {
    /* ===============================
       OUTPUT & TARGET
    =============================== */
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "noEmit": true,

    /* ===============================
       TYPE SAFETY (PHASE 4 HARDENED)
       NOTE:
       - strict = false (belum Phase 6)
       - strictNullChecks = true (WAJIB untuk exactOptionalPropertyTypes)
    =============================== */
    "strict": false,
    "strictNullChecks": true,
    "exactOptionalPropertyTypes": true,

    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,

    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,

    /* ===============================
       MODULE RESOLUTION
    =============================== */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,

    /* ===============================
       PATH ALIAS (LOCKED & JELAS)
    =============================== */
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@modules/*": ["src/modules/*"],
      "@core/*": ["src/core/*"],
      "@shared/*": ["src/shared/*"],

      /* ===== MOCKS (Tempo / Web3) ===== */
      "tempo.ts": ["src/core/tempo/mocks/tempo-chains"],
      "tempo.ts/*": ["src/core/tempo/mocks/*"],

      "wagmi": ["src/core/tempo/mocks/wagmi"],
      "wagmi/*": ["src/core/tempo/mocks/*"],

      "viem": ["src/core/tempo/mocks/viem"],
      "viem/*": ["src/core/tempo/mocks/*"]
    }
  },

  /* ===============================
     PROJECT SCOPE
  =============================== */
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "scripts"
  ]
}
